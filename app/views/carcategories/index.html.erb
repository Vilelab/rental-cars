<h1>Categorias</h1>

<ul>
<% @carcategories.each do |c|%>
  <li> <%= link_to "Categoria #{c.name}", carcategory_path(id: c.id) %> </li>
  <li> <%= number_to_currency  c.daily_rate %> </li>
  
<%end%>
</ul>

<%if @carcategories.empty? %>
  <p>Nenhuma categoria cadastrada</p>
<%end%>

<p><%= link_to "Voltar", root_path %></p>
<p><%= link_to "Registrar nova categoria", new_carcategory_path %></p>
