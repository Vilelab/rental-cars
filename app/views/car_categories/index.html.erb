<h1>Categorias</h1>

<ul>
<% @car_categories.each do |c|%>
  <li> <%= link_to "Categoria #{c.name}", car_category_path(id: c.id) %> </li>
  <li> <%= number_to_currency  c.daily_rate %> </li>
  
<%end%>
</ul>

<%if @car_categories.empty? %>
  <p>Nenhuma categoria cadastrada</p>
<%end%>

<p><%= link_to "Voltar", root_path %></p>
<p><%= link_to "Registrar nova categoria", new_car_category_path %></p>
