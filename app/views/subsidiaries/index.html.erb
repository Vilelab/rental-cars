<h1>Filiais</h1>

<%if @subsidiaries.empty? %>
  <p>Nenhuma filial cadastrada</p>
<%end%>

<ul>
<% @subsidiaries.each do |s|%>
  <li> <%= link_to s.name, subsidiary_path(s.id) %>     </li>
  <li> <%= s.cnpj %>     </li>
  <li> <%= s.address  %> </li>
<%end%>
</ul>

<p><%= link_to "Registrar nova filial", new_subsidiary_path %></p>
<p><%= link_to "Voltar", root_path %></p>
